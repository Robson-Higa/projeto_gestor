{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/vercel.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/**",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/vercel.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ]
}
